{
  "name": "etail-store-nestjs",
  "version": "0.0.1",
  "description": "",
  "author": "Long Tran",
  "private": false,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "nest start",
    "start:docker": "open -a Docker",
    "dev": "nest start --watch",
    "dev:docker": "yarn start:docker && (sleep 5 && yarn dev)",
    "dev:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "test": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-commonjs",
    "mig": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "mig:gen": "cd ./src/db/migrations/schema && typeorm migration:create",
    "mig:up": "yarn mig migration:run -d src/config/data-source.ts",
    "mig:down": "yarn mig migration:revert -d src/config/data-source.ts",
    "mig-dt:gen": "cd ./src/db/migrations/data && typeorm migration:create",
    "mig-dt:up": "cross-env MIGRATE_FOLDER=data yarn mig:up",
    "mig-dt:down": "cross-env MIGRATE_FOLDER=data yarn mig:down",
    "postinstall": "node -e \"process.env.NODE_ENV != 'production' && process.exit(1)\" || husky init",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "yarn format",
      "git add ."
    ]
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/stripe": "^8.0.417",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "moment": "^2.30.1",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "stripe": "^17.4.0",
    "typeorm": "^0.3.20",
    "typeorm-transactional": "^0.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
